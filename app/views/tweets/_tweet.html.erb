<div class="tweet">
  <p class = "tweet-text"><%= tweet.text %></p>
  <div class="tweet-name">
    <% if user_signed_in? %>
      <a href="/users/<%= tweet.user.id %>">
        <span>投稿者：</span><%= tweet.user.name %>
     </a>
    <% else %>
      <a href="/users/sign_in">
        <span>投稿者：</span><%= tweet.user.name %>
      </a>
    <% end %>   
  </div>
  <div class="tweet_likes">
    <% if user_signed_in? && tweet.liked_by?(current_user)%>
      <p><%=link_to "いいね済", tweet_likes_path(tweet.id), method: :delete %></p>
    <% else %>
      <p><%=link_to "いいねする", tweet_likes_path(tweet.id), method: :post %></p>
    <% end %>
  </div>
</div>
